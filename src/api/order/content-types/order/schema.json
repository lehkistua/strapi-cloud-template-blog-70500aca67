{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order",
    "description": "Заказы покупателей"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "orderNumber": {
      "type": "string",
      "unique": true
    },
    "customer": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "orders"
    },
    "products": {
      "type": "json",
      "required": true
    },
    "total": {
      "type": "decimal",
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": ["pending", "paid", "shipped", "delivered", "cancelled"],
      "default": "pending"
    },
    "paymentMethod": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::payment-method.payment-method"
    },
    "shippingMethod": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::shipping-method.shipping-method"
    },
    "shippingAddress": {
      "type": "text",
      "required": true
    },
    "paymentStatus": {
      "type": "enumeration",
      "enum": ["pending", "success", "failed"],
      "default": "pending"
    },
    "comment": {
      "type": "text"
    },
    "estimatedDeliveryDate": {
      "type": "date"
    },
    "createdAt": {
      "type": "datetime"
    },
    "updatedAt": {
      "type": "datetime"
    }
  }
}